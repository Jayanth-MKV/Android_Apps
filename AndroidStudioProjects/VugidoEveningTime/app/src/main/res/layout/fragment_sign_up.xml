<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:background="#fff"
        android:elevation="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Name"
                    android:textSize="@dimen/_15sdp" />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_margin="@dimen/_10sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_below="@id/student_name"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/student_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:focusable="true"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Mobile Number"
                    android:inputType="number"
                    android:textSize="@dimen/_15sdp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_margin="@dimen/_10sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_below="@id/student_mobile"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/student_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:focusable="true"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Gmail"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_15sdp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                 android:layout_centerHorizontal="true"
     android:layout_marginStart="30dp"
     android:layout_marginEnd="30dp"
     android:layout_margin="@dimen/_10sdp"
     android:layout_below="@id/student_email"
     android:id="@+id/check_tc_pp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

     <CheckBox
         android:padding="@dimen/_5sdp"
         android:id="@+id/checkBox_login"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Accept Our" />

     <TextView
         android:textColor="@color/red"
         android:textColorLink="@color/gradient_start_color"
         android:textStyle="italic"
         android:padding="@dimen/_4sdp"
         android:id="@+id/tc_link"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="TC ," />

     <TextView

         android:textColor="@color/red"
         android:textColorLink="@color/gradient_start_color"
         android:textStyle="italic"
         android:padding="@dimen/_4sdp"
         android:id="@+id/pp_link"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Privacy Policy" />

 </LinearLayout>

            <Button
                android:layout_below="@id/check_tc_pp"
                android:textAllCaps="false"
                android:background="@drawable/btn_gradient_style"
                android:textColor="#fff"
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"

                />

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button"
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />



        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>




</RelativeLayout>