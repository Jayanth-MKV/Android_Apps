<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:background="@color/colorAccent"
    android:id="@+id/actionOptionCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_5sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <RelativeLayout
        android:padding="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/vegetables"
            android:id="@+id/cat_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"/>

        <TextView
            android:textColor="@color/colorAccent"
            android:background="#95000000"
            android:layout_alignBottom="@+id/cat_image"
            android:id="@+id/admin_access_option_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vegetables , Dairy Products"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@id/admin_access_option_title"
            android:text="Active"
            android:id="@+id/active_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>
