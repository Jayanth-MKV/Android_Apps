<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/checkoutCard"
    android:background="@drawable/edit"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="3dp"
    android:layout_below="@id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:textAlignment="center"
                android:layout_weight="0.2"
                android:textSize="18sp"
                android:padding="10dp"
                android:id="@+id/oid_text"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/id"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="0.8"
                android:padding="10dp"
                android:text="45"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/oid"
                android:background="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_below="@id/order_id"
            android:id="@+id/timestamp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:textAlignment="center"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:padding="10dp"
                android:id="@+id/on_text"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/on"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="0.8"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="12/10/1998"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/on"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/count"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="@string/total_items"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/count_"
                android:textColor="@color/colorPrimary"
                android:background="@color/cart_row1"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/item_price"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="@string/items_price"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Rs.100/-"
                android:textStyle="bold"
                android:id="@+id/IP"
                android:textColor="@color/colorPrimary"
                android:background="@color/cart_row1"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"

            android:id="@+id/dc"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="@string/delivery_charges"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/DC"
                android:textColor="@color/colorPrimary"
                android:background="@color/cart_row1"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/FinalPrice"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/dc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="@string/you_pay"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/FP"
                android:textColor="@color/colorPrimary"
                android:background="@color/cart_row1"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

       <!-- <LinearLayout
            android:layout_margin="2dp"

            android:id="@+id/loc"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/FinalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
