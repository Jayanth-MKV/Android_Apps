                android:layout_height="match_parent"/>


        </LinearLayout>-->

        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/D_mode"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@id/FinalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="@string/delivery_mode"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/DM"
                android:textColor="@color/colorPrimary"
                android:background="@color/cart_row1"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <TextView
            android:layout_below="@id/D_mode"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/location"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="start"
            android:id="@+id/OrderLocation"
            android:text="gegvleig ewofeowc pcwqoeuw wqpecueyr ceru cweiuw  ceg ecu ceig ceiug cqwoig "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="10dp"
            android:layout_below="@id/OrderLocation"
            android:id="@+id/OrderStatusText"
            android:text="@string/order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
