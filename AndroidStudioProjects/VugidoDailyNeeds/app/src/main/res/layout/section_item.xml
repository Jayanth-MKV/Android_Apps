<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
android:layout_height="wrap_content"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="@dimen/_5sdp"
android:elevation="@dimen/_3sdp"
xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_sub_category_image"
        android:src="@drawable/orange"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp" />
    <TextView
        android:alpha="0.1"
        android:textColor="@color/colorAccent"
        android:background="@color/red"
        android:textAlignment="center"
        android:text="30%"
        android:textSize="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/Offer_Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_below="@id/iv_sub_category_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"
            android:text="Tomato"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="1"
            android:id="@+id/price_tag"
            android:orientation="horizontal"
            android:layout_below="@id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.5"
                android:id="@+id/product_price"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:text="30.00/-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.5"
                android:id="@+id/striked_price"
                android:textStyle="normal"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:text="30.00/-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:text="1000grams"
            android:layout_below="@id/price_tag"
            android:id="@+id/product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/product_quantity"
            android:id="@+id/btn_add_sub_vege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:background="@drawable/edit"
            android:layout_marginTop="@dimen/_10sdp"/>


    </RelativeLayout>




</RelativeLayout>


</androidx.cardview.widget.CardView>