<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/checkoutCard"
    android:background="@drawable/edit"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="3dp"
    android:layout_below="@id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/date_purchased"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                android:text="12 Oct 2019"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/price_purchased"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:text="Rs. 300/-"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/details"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Details"
                    android:background="@drawable/edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <!-- <ImageButton
                 android:id="@+id/delete_purchased"
                 android:src="@drawable/delete"
                 android:textStyle="bold"
                 android:text="@string/review"
                 android:background="@color/cart_row1"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:contentDescription="@string/app_name" />-->

        </LinearLayout>


</androidx.cardview.widget.CardView>