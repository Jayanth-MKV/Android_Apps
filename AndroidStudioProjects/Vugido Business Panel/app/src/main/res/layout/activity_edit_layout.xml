<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_15sdp"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccent"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/edit_ImageSelected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gradient_start_color"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vegetables" />
            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">




                    <TextView
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"
                        android:padding="@dimen/_5sdp"

                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/edit"
                        android:id="@+id/edit_productname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />


                    <TextView
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"
                        android:padding="@dimen/_5sdp"

                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@id/edit_productname"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/edit_sub_category"
                        android:drawableEnd="@drawable/edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />




                    <TextView
                        android:padding="@dimen/_5sdp"
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"

                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@id/edit_sub_category"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/edit"
                        android:id="@+id/edit_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />



                    <TextView
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"
                        android:padding="@dimen/_5sdp"

                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@id/edit_quantity"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/edit"
                        android:id="@+id/edit_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />


                    <TextView
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"
                        android:padding="@dimen/_5sdp"

                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@id/edit_price"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/edit"
                        android:id="@+id/edit_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />




                    <TextView
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"
                        android:padding="@dimen/_5sdp"

                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@id/edit_description"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/edit_offer"
                        android:drawableEnd="@drawable/edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />



                    <TextView
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"
                        android:padding="@dimen/_5sdp"

                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@id/edit_offer"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/edit_offer_limit"
                        android:drawableEnd="@drawable/edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />





                    <TextView

                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/blue_gradient"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@id/edit_offer_limit"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/edit"
                        android:id="@+id/edit_cart_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp" />




            </RelativeLayout>

            <Button
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/red"
                android:textAllCaps="false"
                android:id="@+id/edit_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Image"
                app:layout_constraintBottom_toBottomOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="@+id/cardView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <include
        android:visibility="gone"
        android:id="@+id/my_progress"
        layout="@layout/activity_progress"/>

</androidx.constraintlayout.widget.ConstraintLayout>